# Copy this to the end of my .bashrc file

# Python Virtualenvwrapper settings, replace /user/ with the actual username
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/path/to/pythonprojects
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
export VIRTUALENVWRAPPER_VIRTUALENV=/home/user/.local/bin/virtualenv
source /home/user/.local/bin/virtualenvwrapper.sh
